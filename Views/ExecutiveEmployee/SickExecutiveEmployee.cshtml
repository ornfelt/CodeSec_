@{
    Layout = "_ExecutiveEmployeeLayout";
    @model IEnumerable<Department>
}
<body>
    <div id="content">
        <h2>Detaljer för anmälan</h2>
        <p class="info">Du är inloggad som personal</p>

        @await Component.InvokeAsync("SickNote", ViewBag.ID)

    <section id="bottomColumn">
      <h3>Redigera anmälan</h3>
      <p class="label">Händelser:</p>

      <form asp-controller="ExecutiveEmployee" asp-action="SaveInfoEntered" asp-route-id=@ViewBag.ID method="post" enctype="multipart/form-data" multiple>
        <textarea name="events" rows="5" cols="60"></textarea>

        <p class="label">Mer information:</p>
        <textarea name="information" rows="5" cols="60"></textarea>

        <p class="label">Ändring av status:</p>

        @await Component.InvokeAsync("DropDown")

        <p>
          <input class="button" type="submit" value="Spara ändringarna" />
        </p>
      </form>
    </section>

        <footer>
            &copy; CodeSec All rights reserved.
        </footer>
    </div><!-- End Content -->
</body>
@{
    Layout = "_LoggedInLayout";
}
<body>
    <nav>
      <ul>
        <li><a class="reports" asp-controller="Admin" asp-action="StartAdmin">Start(Anmälningar)</a></li>
        <li><a class="reportAdd" asp-controller="Admin" asp-action="AdminLogs">Se loggfiler</a></li>
        <li class="right"><a class="logout" asp-controller="Home" asp-action="Index">Logga ut</a></li>
      </ul>
    </nav><!-- End Nav -->

    <div id="content">
        <h2>Detaljer för anmälan</h2>
        <p class="info">Du är inloggad som admin</p>

        @await Component.InvokeAsync("SickNote", ViewBag.ID)

        <section id="bottomColumn">
            <h3>Redigera anmälan</h3>
            <p>
              Ange anställd:
            </p>
                <form asp-controller="Admin" asp-action="SaveRegularEmployee" asp-route-id=@ViewBag.ID>
                    <select name="RegularEmployee">
                        <option selected="selected">Välj</option>
                        @foreach (Employee employee in ViewBag.ListOfEmployees)
                        {
                            <option value="@employee.EmployeeId">@employee.EmployeeName</option>
                        }
                    </select>
            
            <p><input type="checkbox" name="noAction" value="true" /> Ingen åtgärd: <input type="text" name="reason" value="Ange motivering" /></p>
            <p><input class="button" type="submit" value="Spara" /></p>
            </form>
        </section>

        <footer>
            &copy; CodeSec All rights reserved.
        </footer>
    </div><!-- End Content -->
</body>